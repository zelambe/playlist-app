<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             tools:context=".whatsNew" android:id="@+id/frameLayout3">
    <android.support.v7.widget.RecyclerView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/top_tracks_list"
            android:layout_marginEnd="186dp"
            android:layout_marginRight="186dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="185dp" android:layout_marginStart="185dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <TextView
            android:text="Top Tracks"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:id="@+id/textView" android:textSize="36sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="115dp" android:layout_marginStart="115dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="115dp" android:layout_marginRight="115dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/top_tracks_list"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="30dp"/>
</android.support.constraint.ConstraintLayout>